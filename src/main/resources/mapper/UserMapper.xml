<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tupu.dao.UserDao">
	<resultMap id="BaseResultMap" type="com.tupu.domain.User">
		<result column="id" property="id" />
		<result column="username" property="userName" />
		<result column="password" property="passWord" />
		<result column="mobile" property="mobile" />
		<result column="token" property="token" />
		<result column="description" property="description" /> 
	</resultMap>

	<sql id="Base_Column_List">
		id, username
	</sql>


	<select id="getUserList" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		*
		from t_user
	</select>
	<select id="findById" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		*
		from t_user 
		where id = #{id}
	</select>
	
	<insert id="saveUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
		insert into
			t_user(id,username,password,mobile)
		values
			(#{id},#{userName},#{passWord},#{mobile})
	</insert>
	
		<update id="updateUser" parameterType="User">
		update
			t_user
		set
		<if test="userName!=null">
			username = #{userName},
		</if>
		<if test="passWord!=null">
			password = #{passWord},
		</if>
		<if test="mobile!=null">
			mobile = #{mobile}
		</if>
		<if test="token!=null">
			token = #{token}
		</if>
		where
			id = #{id}
	</update>

	<delete id="deleteUser" parameterType="java.lang.Long">
		delete from
			t_user
		where
			id = #{id}
	</delete>
	
	<select id="findByUserName" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		count(*)
		from t_user 
		where username = #{userName}
	</select>

	<select id="findByToken" resultType="int">
		select
		count(*)
		from t_user
		where id = #{id} and token = #{token}
	</select>

	<select id="login" resultMap="BaseResultMap">
		select
		id,user_name
		from t_user
		where username = #{userName} and password = #{password}
	</select>
</mapper>